<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @movie.poster_url %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <% @list.movies.each do |movie| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @movie.poster_url %>')">
          <%= movie.title %>
          <%= link_to "+", movie_path(movie), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-remove-link" %>
          <div class="card-tags">
            <% movie.tags.each do |tag| %>
              <span><%= tag.title %></span>
            <% end %>
            <%= link_to "+", new_movie_movie_bookmarks_path(movie) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center mt-5">
  <div class="col-4">
    <h4>Add a movie:</h4>
    <%= simple_form_for [@list, @movie] do |f| %>
      <%= f.input :title, placeholder: "Spiderman" %>
      <%= f.input :poster_url, placeholder: "" %>
      <%= f.submit "Add" %>
    <% end %>
  </div>
  </div>
</div>


<div>
  <%= link_to "Edit this list", edit_list_path(@list) %> |
  <%= link_to "Back to Lists", lists_path %>

  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
